.page-header
  %h1= current_user.nickname
= render 'profile_menu'
= simple_form_for(@user, :as => 'user', :url => update_password_user_profile_path, :html => { :method => :put, :class => 'form-horizontal' }) do |f|
  = f.hidden_field :reset_password_token
  = f.error_notification
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.button :submit, t(:change_password), :class => 'btn-primary'

